{
  "name": "jhakaas-jasoos",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered detective game where players interrogate suspects to solve mysteries",
  "scripts": {
    "dev": "next dev",
    "dev:backend": "cd backend && ./venv/bin/uvicorn main:app --reload",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate:story": "tsx scripts/generate-story.ts",
    "generate:images": "tsx scripts/generate-images.ts",
    "test:llm": "tsx scripts/testing/test-llm.ts",
    "test:image": "tsx scripts/testing/test-image.ts",
    "test:character": "tsx scripts/testing/test-character.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "next": "^14.0.0",
    "openai": "^4.73.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
